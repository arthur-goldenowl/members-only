<h1>Posts</h1>

<% @posts.each do |post| %>
  <div>
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <% if user_signed_in? %>
      <p><strong>Author:</strong> <%= post.user.email %></p>
    <% end %>
  </div>
  <hr>
<% end %>

<%= link_to 'New Post', new_post_path if user_signed_in? %>
